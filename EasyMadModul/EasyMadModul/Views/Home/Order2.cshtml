@model IEnumerable<EasyMadModul.Models.OrderModel>

@{
    ViewBag.Title = "Order2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order2</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MemNumb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DishName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderCmnt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemNumb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DishName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCmnt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
               
            </td>
        </tr>
    }

</table>

