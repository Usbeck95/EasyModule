@model IEnumerable<EasyMadModul.Models.OrderModel>

@{
    ViewBag.Title = "Order1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order1</h2>

<div class="container-fluid" id="Order0Container">

    <div class="row" style="justify-content: center;">
        @foreach (var item in Model)
        {
            <div class="col" style="max-width: max-content; padding-bottom: 1.5em;">
                <div class="card" style="width: 18rem; height: 28rem; background-color: #FEF5ED; ">
                    <div class="card-body row " style=" max-height: 4em;">
                        <div class="col" style="height:max-content;">
                            <h5 class="card-title"> @Html.DisplayNameFor(model => model.MemNumb):</h5>
                        </div>
                        <div class="col" style="height:max-content;">

                            <h5 class="card-title"> @Html.DisplayFor(modelItem => item.MemNumb)</h5>
                        </div>
                    </div>
                    <img src="~/Images/@Html.DisplayFor(modelItem => item.ImgName)" class="card-img-top" alt="..." style="height: 185px;;">

                    <div class="card-body">
                        <div class="row" style="justify-content: center;">
                            <div class="col">
                                <h5>@Html.DisplayNameFor(model => model.DishName):</h5>
                            </div>
                            <div class="col">
                                <h5 class="text-break">@Html.DisplayFor(modelItem => item.DishName)</h5>
                            </div>
                        </div>
                        <div class="row" style="justify-content: center;">
                            <div class="col">
                                <h5> @Html.DisplayNameFor(model => model.OrderCmnt):</h5>
                            </div>
                            <div class="col">
                                <h5 class="text-break"> @Html.DisplayFor(modelItem => item.OrderCmnt)</h5>
                            </div>
                            </div>

                       
                    </div>
                    <button type="button" class="btn btn-primary" style="width: inherit; color:white;"><i class="bi bi-check-circle fs-3 "></i>  @Html.ActionLink("Udlever", "UpdateOrder1", new { id = item.Id }) </button>

                </div>
            </div>
        }
    </div>



</div>

<style>
    a {
        color: white;
        text-decoration: none;
    }
</style>